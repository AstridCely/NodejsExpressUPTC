<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('templates/header') %>
  <title>Peliculas</title>
</head>

<body>

  <%- include('templates/navigation') %>

  <div class="container p-4">
    <div class="row">

    <%if (Movies.length > 0) {%>

    <% Movies.forEach(function(Movies) { %>
    <div class="col-md-4">
      <div class="card">
        <div class="card-header bg-dark text-white">
          <%= Movies.title %>
        </div>
        <img class="card-img-top" src="<%= Movies.image %>">
        <div class="card card-body">
          <%= Movies.description %>
        </div>
        <div class="card card-body">
          <%= Movies.gender %> <p> <%= Movies.Duracion %></p>
        </div>
        <div class="card-footer">
          <a href="/delete/<%= Movies.id %>" onclick="alert('Pelicula Borrada exitosamente')" class="btn btn-danger btn-block">
            Borrar
          </a>
        </div>
      </div>
    </div>
    <%})%>

    <%} else {%>
    <div class="card card-body text-center">
      <p>no hay peliculas. <a href="/newMovie">a√±adir una</a></p>
    </div>
    <%}%>
    </div>
  </div>

</body>

</html>